{
  "name": "bldrwnsch",
  "version": "1.0.0",
  "private": true,
  "description": "Interactive map of image requests of the German Wikipedia",
  "main": "app.js",
  "author": "Simon Legner <Simon.Legner@gmail.com>",
  "keywords": [
    "wikipedia",
    "toolforge",
    "leaflet",
    "image-requests",
    "Bilderwunsch"
  ],
  "license": "GPL-3.0-or-later",
  "homepage": "https://bldrwnsch.toolforge.org/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon04/bldrwnsch.git"
  },
  "bugs": {
    "url": "https://github.com/simon04/bldrwnsch/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build --sourcemap",
    "fix:style": "prettier --write $(git ls-files '*js' '*.ts' '*.html' '*.css' '*.md' '*.yml')",
    "test": "prettier --check $(git ls-files '*.js' '*.ts' '*.html' '*.css' '*.md' '*.yml')"
  },
  "dependencies": {
    "ol": "^6.12.0",
    "ol-ext": "^3.2.21"
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "prettier": "^2.1.2",
    "vite": "^2.7.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "prettier": {
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  }
}
