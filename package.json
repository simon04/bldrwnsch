{
  "name": "bldrwnsch",
  "version": "1.0.0",
  "private": true,
  "description": "Interactive map of image requests of the German Wikipedia",
  "main": "app.js",
  "author": "Simon Legner <Simon.Legner@gmail.com>",
  "keywords": [
    "wikipedia",
    "toolforge",
    "leaflet",
    "image-requests",
    "Bilderwunsch"
  ],
  "license": "GPL-3.0-or-later",
  "homepage": "https://bldrwnsch.toolforge.org/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon04/bldrwnsch.git"
  },
  "bugs": {
    "url": "https://github.com/simon04/bldrwnsch/issues"
  },
  "scripts": {
    "build": "rollup --config --sourcemap",
    "fix:eslint": "eslint --no-ignore $(git ls-files '*.js' '*.ts') --fix",
    "fix:style": "prettier --write $(git ls-files '*js' '*.ts' '*.html' '*.css' '*.md' '*.yml')",
    "test": "eslint --no-ignore $(git ls-files '*.js' '*.ts') && prettier --list-different $(git ls-files '*.js' '*.ts' '*.html' '*.css' '*.md' '*.yml')"
  },
  "dependencies": {
    "ol": "^6.1.0",
    "ol-ext": "^3.1.7"
  },
  "devDependencies": {
    "@types/ol": "^5.3.6",
    "@types/rollup": "^0.54.0",
    "eslint": "^6.6.0",
    "eslint-plugin-compat": "^3.3.0",
    "husky": "^3.0.9",
    "postcss-copy": "^7.1.0",
    "prettier": "^1.18.2",
    "rollup": "^1.26.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-terser": "^5.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "prettier": {
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  }
}
